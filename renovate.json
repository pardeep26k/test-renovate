{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 6am"
  ],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "branch",
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "updateTypes": ["major"],
      "automerge": false
    }
  ]
}